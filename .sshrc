set -o vi

source "$SSHHOME/.sshrc.d/prompt.bash"

RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
LIGHT_YELLOW="\[\033[0;93m\]"
GREEN="\[\033[0;32m\]"
BLUE="\[\033[0;34m\]"
CYAN="\[\033[0;36m\]"
LIGHT_RED="\[\033[1;31m\]"
LIGHT_GREEN="\[\033[1;32m\]"
WHITE="\[\033[1;37m\]"
LIGHT_GRAY="\[\033[0;37m\]"
RESET="\[\e[0m\]"
BOLD="\[\e[1m\]"

export PS1="${CYAN}\u${RESET} @ ${GREEN}\`hostname -f\`${RESET} in ${BOLD}${LIGHT_YELLOW}\w\`parse_git_branch\`${RESET} [\t]\n${LIGHT_RED}\\$ ${RESET}"

export FUZZYSNAKE_EDITOR='vim'

alias fz="python $SSHHOME/.sshrc.d/bin/fz.pyc"
source "$SSHHOME/.sshrc.d/fztricks.bash"

bind -f $SSHHOME/.sshrc.d/.inputrc

bind -m vi-insert "\C-l":clear-screen
