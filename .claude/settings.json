      "Bash(base64:*)",
      "Bash(bash:*)",
      "Bash(brew search:*)",
      "Bash(cat:*)",
      "Bash(checkmake:*)",
      "Bash(chmod:*)",
      "Bash(command -v:*)",
      "Bash(curl:*)",
      "Bash(diff:*)",
      "Bash(docker pull:*)",
      "Bash(docker run:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh variable list:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git cat-file:*)",
      "Bash(git cat:*)",
      "Bash(git checkout:*)",
      "Bash(git config --get:*)",
      "Bash(git describe:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git remote:*)",
      "Bash(git rev-list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git rm:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(git worktree add:*)",
      "Bash(git worktree list:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(go env:*)",
      "Bash(go fmt:*)",
      "Bash(go get:*)",
      "Bash(go list:*)",
      "Bash(go mod tidy:*)",
      "Bash(go mod:*)",
      "Bash(go run:*)",
      "Bash(go test:*)",
      "Bash(golangci-lint:*)",
      "Bash(grep:*)",
      "Bash(hadolint:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(launchctl list:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(markdownlint:*)",
      "Bash(mise exec:*)",
      "Bash(mise install:*)",
      "Bash(mise list:*)",
      "Bash(mise reshim:*)",
      "Bash(mise where:*)",
      "Bash(mkdir:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm search:*)",
      "Bash(npm view:*)",
      "Bash(oas-toolkit:*)",
      "Bash(openapi-diff:*)",
      "Bash(osascript:*)",
      "Bash(pbcopy:*)",
      "Bash(printenv:*)",
      "Bash(printf:*)",
      "Bash(python3:*)",
      "Bash(readlink:*)",
      "Bash(redocly:*)",
      "Bash(shellspec:*)",
      "Bash(task check:*)",
      "Bash(task fmt:*)",
      "Bash(task format:*)",
      "Bash(task lint:*)",
      "Bash(task test:*)",
      "Bash(tee:*)",
      "Bash(tree:*)",
      "Bash(wait)",
      "Bash(wc:*)",
      "Bash(yq:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh auth token:*)",
      "Bash(gh workflow run:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "klaudiush --hook-type PreToolUse",
            "timeout": 30
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt|auth_success|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/notify.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/permission-dialog.sh",
            "timeout": 180000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "gh-review-comments@sai": true,
    "humanize@sai": true
  },
  "alwaysThinkingEnabled": true
}
